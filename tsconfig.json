{
  "compilerOptions": {
    "jsx": "react",                        
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,                             
    "rootDirs": ["./backend", "./frontend"],                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "typeRoots" : ["./backend/types", "./node_modules/@types"],                
  },
  "exclude":[
    "./node_modules"
  ],
  "include": [
    "**/*.ts", "**/*.tsx"
  ]
}